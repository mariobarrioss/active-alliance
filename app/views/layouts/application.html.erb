<!DOCTYPE html>
<html>
  <head>
    <title>Active Alliance</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://use.fontawesome.com/releases/v5.13.0/js/all.js" data-mutate-approach="sync"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar is-primary" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
          <h1 class="title has-text-white-ter has-text-weight-bold">Active Alliance</h1>
        <% end %>

        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
          <% if user_signed_in? %>
            <%= link_to 'All my transactions', "#", class: "navbar-item" %>
            <%= link_to 'All my external transactions', "#", class: "navbar-item" %>
            <%= link_to 'All groups', groups_path, class: "navbar-item" %>
          <% else %>
            <span hidden="true"></span>
            <span hidden="true"></span>
            <span hidden="true"></span>
          <% end %>
          </div>
        </div>

        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
              <% if user_signed_in? %>
                  <%= link_to current_user.name, "#", class: "button is-link" %>
                  <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"button is-danger is-focused" %>
              <% else %>
                <%= link_to 'Log In', new_user_session_path, class: "button is-success" %>
                <%= link_to 'Sign Up', new_user_registration_path, class: "button is-warning is-focused" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <% if notice.present? %>
      <div class="notification is-success is-light">
        <button class="delete"></button>
        <p> <%= notice %> </p>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="notification is-danger is-light">
        <button class="delete"></button>
        <p> <%= alert %> </p>
      </div>
    <% end %>
    
    <section class="section">
      <div class="container">
        <%= yield %>
      </div>
    </section>
  </body>
</html>
