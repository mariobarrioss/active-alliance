<div class="box">
  <article class="media">
    <figure class="media-left">
      <p class="image is-64x64">
        <%= assigned_group?(activity) %>
      </p>
    </figure>
    <div class="media-content">
      <div class="content">
        <p>
          <a class="has-text-black" href="<%= activity_path(activity) %>"><strong><%= activity.description %></strong></a><br/>
          <small> created by: <%= activity.author.name %></small>
          <br>
        </p>
        <small><%= activity.created_at.strftime("%d %B %Y") %></small>
      </div>
      <nav class="level is-mobile">
        <div class="level-left">
          <a class="level-item">
            <%= like_or_dislike_icon(activity) %>
            <span class="has-text-grey pl-1"><%= activity.likes.count %></span>
          </a>
          <%= like_or_dislike(activity) %>
        </div>
      </nav>
    </div>
    <div class="media-right">
      <p class="has-text-black has-text-weight-bold"><%= pluralize(activity.amount, 'minute') %></p>
    </div>
  </article>
</div>
