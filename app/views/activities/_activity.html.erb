<div class="box">
  <article class="media">
    <figure class="media-left">
      <p class="image is-64x64">
        <%= assigned_group?(activity) %>
      </p>
    </figure>
    <div class="media-content">
      <div class="content">
        <p>
          <a class="has-text-black" href="<%= activity_path(activity) %>"><strong><%= activity.description %></strong></a><br/>
          <small> created by: <%= activity.author.name %></small>
          <br>
        </p>
        <small><%= activity.created_at.strftime("%d %B %Y") %></small>
      </div>
      <nav class="level is-mobile">
        <div class="level-left">
          <%= like(activity) %>
          <span class="has-text-grey "><%= activity.likes.count %></span>
        </div>
      </nav>
    </div>
    <div class="media-right">
      <div class="content">
        <p class="has-text-black has-text-weight-bold is-spaced"><%= pluralize(activity.amount, 'minute') %></p>
        <p class="is-size-7">Group:</p>
        <%= group_name?(activity) %>
      </div>
    </div>
  </article>
</div>
