<section class="section">
  <div class="columns is-mobile is-centered has-background-white-bis">
    <div class="column">

      <h3 class="title is-3 has-text-centered has-text-grey-lighter">Log in</h3>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <div class="control">
            <%= f.label :email, class: "label has-text-grey-lighter" %>
            <%= f.email_field :email, autocomplete: "email", placeholder: "user@example.com", class: "input" %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.label :password, class: "label has-text-grey-lighter" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "has-text-grey-lighter" %>
          </div>
        <% end %>

        <div class="field">
          <div class="control">
            <%= f.submit "Log in", class: "input button is-primary" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</section>
