<section class="section">
  <div class="columns is-mobile is-centered has-background-white-bis">
    <div class="column">

      <h3 class="title is-3 has-text-centered has-text-grey-lighter">Sign up</h3>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <div class="control">
              <%= f.label :name, class: "label has-text-grey-lighter" %>
              <%= f.text_field :name, autofocus: false, autocomplete: "name", placeholder: "Full name...", class: "input" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.label :username, class: "label has-text-grey-lighter" %>
              <%= f.text_field :username, autofocus: false, autocomplete: "username", placeholder: "@username", class: "input" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.label :email, class: "label has-text-grey-lighter" %>
              <%= f.email_field :email, autocomplete: "email", placeholder: "user@example.com", class: "input" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.label :password, class: "label has-text-grey-lighter" %>
              <% if @minimum_password_length %>
              <em class="has-text-grey-lighter">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.label :password_confirmation, class: "label has-text-grey-lighter" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.submit "Sign up", class: "input button is-primary" %>
            </div>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
