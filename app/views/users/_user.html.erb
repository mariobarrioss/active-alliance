<div class="card has-background-primary">
  <div class="card-image">
    <figure class="image is-128x128">
      <%= gravatar_image_tag(user.name, size: 128, alt: user.email, class: "is-rounded") %>
    </figure>
  </div>
  <div class="card-content">
    <div class="media">
      <div class="media-content">
        <p class="subtitle is-4 has-text-white-ter"><%= user.name %></p>
        <p class="subtitle is-6 has-text-white-ter">@<%= user.username %></p>
      </div>
    </div>
  </div>
</div>

<nav class="panel">
  <p class="panel-heading">
  </p>
  <a class="panel-block is-active" href="<%= personal_path %>">
    <span class="panel-icon">
      <i class="fas fa-book" aria-hidden="true"></i>
    </span>
    All my activities
  </a>
  <a class="panel-block" href="<%= external_path %>">
    <span class="panel-icon">
      <i class="fas fa-book" aria-hidden="true"></i>
    </span>
    All my external activities
  </a>
  <a class="panel-block" href="<%= groups_path %>">
    <span class="panel-icon">
      <i class="fas fa-book" aria-hidden="true"></i>
    </span>
    All Groups
  </a>
</nav>
